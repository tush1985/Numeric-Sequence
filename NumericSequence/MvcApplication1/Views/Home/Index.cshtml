

@{
    ViewBag.Title = "NumberSequence";
}

<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootswatch/3.1.1/darkly/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
<script src="~/Angular/App.js"></script>
<script src="~/Angular/LoginService.js"></script>  
<div id="Main" ng-app="numberSequence">
<div class="container" ng-controller="userCtrl" >
  <div ui-view>
  <div class="row">
  <div class="col-sm-8 col-sm-offset-2">

   <div id="form-container">
  
      <div class="page-header text-center">          
          
          
          @*<div id="status-buttons" class="text-center">
            <a ui-sref="actie"><span class="glyphicon glyphicon-user"></span></a>              
          </div>*@
          <div id="info-button" class="text-center">
            <a href="#" data-toggle="modal" data-target="#myModal">
                    <span class="glyphicon glyphicon-info-sign"></span>
            </a>
              <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Number Sequence</h4>
        </div>
        <div class="modal-body">
          <p>This application will generate a numeric sequences.
             To generate numeric sequences, enter a positive number in the text box provided and click on the GetNumberSequence or press an enter.          
             <ul>Numeric Sequence appear as follows
                 <li><h5>All numbers up to and including the number entered</h5></li>
                 <li><h5>All odd numbers up to and including the number entered</h5></li>
                 <li><h5>All even numbers up to and including the number entered</h5></li>
                 <li><ul><h5>All numbers up to and including the number entered, except when</h5>
                     <li>A number is a multiple of 3 output C, and when,</li>
                     <li>A number is a multiple of 5 output E, and when,</li>
                     <li>A number is a multiple of both 3 and 5 output Z</li>
                 </ul>
                </li>
                 <li><h5>All fibonacci numbers up to and including the number entered</h5></li>
              </ul>
              

          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>




          </div>
          
      </div>
      
      <!-- use ng-submit to catch the form submission and use our Angular function -->
      <form id="Login-form" ng-submit="onUserSubmit(user.uservalue)">
          <div id="form-views"ui-view>
              
              <div class="form-group">
                @*<label for="name">Enter a Number</label>*@
                <input type="number" title="Positive Number" pattern="\d*" min="1"  class="form-control" name="uservalue" required ng-model="user.uservalue" placeholder="type your Number" id="uservalue">
                
              </div>

                <div class="form-group row">
                <div class="col-xs-6 col-xs-offset-3">
                    <input type="submit" id="getvalues" value="GetNumberSequence"  class="btn btn-block btn-info">
                    <span class="glyphicon"></span>
                    </input>
                </div>
                </div>



            </div>
        </form>

       
        <div id="message" ng-model="user.error">{{user.error}}</div>
       
           <div class="col-xs-10" ng-show="user.numbers">
               <div> <h5>Numbers</h5>
                  <span ng-repeat="num in user.numbers">
                      {{num}}
                  </span>
              </div>
           </div>
            <div class="col-xs-10" ng-show="user.odd_Numbers">
               <div> <h5>Odd Numbers</h5>
                  <span ng-repeat="num in user.odd_Numbers">
                      {{num}}
                  </span>
              </div>
           </div>
            <div class="col-xs-10" ng-show="user.even_Numbers">
                   <div> <h5>Even Numbers</h5>
                  <span ng-repeat="num in user.even_Numbers">
                      {{num}}
                  </span>
              </div>
           </div>
            <div class="col-xs-10" ng-show="user.custom_Numbers">
               <div> <h5>Custom Numbers</h5>
                  <span ng-repeat="num in user.custom_Numbers track by $index">
                      {{num}}
                  </span>
              </div>
           </div>
            <div class="col-xs-10" ng-show="user.fibonacci_Numbers">
               <div> <h5>Fibonacci Numbers</h5>
                  <span ng-repeat="num in user.fibonacci_Numbers track by $index">
                      {{num}}
                  </span>
              </div>
           </div>
       

  
    </div>
  
  <!-- show our formData as it is being typed -->  

   </div>
   </div>
   </div>
</div>
</div>
<style>
    h5
    {
        color: #ffd800;
    }

    .glyphicon-info-sign
    {
        font-size :40px;
	    
    }

</style>

<script>
    document.getElementById("message").style.display = 'none';
</script>